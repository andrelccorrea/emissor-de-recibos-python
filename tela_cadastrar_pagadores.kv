#:kivy 1.11
# converte as cores de HEX para o padrão rgba float do kivy
#:import rgba kivy.utils.rgba

<Button>:
    background_color: rgba('#973e95')
    # força a utilizar a altura informada
    size_hint_y: None
    height: dp(50)
    # força a utilizar a largura informada
    size_hint_x: None
    width: dp(100)
    # para o texto não extrapolar o tamanho do widget
    text_size: self.size
    halign: "center"
    valign: "center"

<TelaCadastrarPagadores>:
    # cor de fundo
    canvas.before:
        Color: 
            rgba: rgba('#c38bbf')
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        id: lbl_nome_da_tela
        # fonte baixada e configurada no arquivo .py
        font_name: 'AlexBrush'
        # tamanho da fonte
        font_size: dp(65)
        color: rgba('#3e2f3d')
        text: 'Cadastrar Pagador'
        # text_size limita o tamanho do texto
        # sendo a largura da tela (root) - 300 x 300
        text_size: self.size
        # alinha o texto horizontalmente no label
        halign: 'center'
        # alinha o texto verticalmente no label
        valign: 'center'
        # posiciona o centro do label em x, y
        # ‘x’, ‘right’ e ‘center_x’ usam o parent width. 
        # ‘y’, ‘top’ e ‘center_y’ usam o parent height.
        pos_hint: {'center_x':.5, 'center_y':.92}
    Label:
        id: lbl_nome
        size_hint: .06, .03
        # para o texto não extrapolar o tamanho do widget
        text_size: self.size
        halign: "left"
        valign: "center"
        color: rgba('#3e2f3d')
        text: 'Nome'
        pos_hint: { 'x':.02 , 'center_y':.80 }
    TextInput:
        id: txt_nome
        multiline: False
        pos_hint: { 'x':.02 , 'center_y':.76 }  
    Label:
        id: lbl_cpf
        size_hint: .06, .03
        # para o texto não extrapolar o tamanho do widget
        text_size: self.size
        halign: "left"
        valign: "center"
        color: rgba('#3e2f3d')
        text: 'CPF'
        pos_hint: { 'x':.02 , 'center_y':.70 }
    CPFInput:
        id: txt_cpf
        multiline: False
        size_hint_x: .16
        pos_hint: { 'x':.02 , 'center_y':.66 }    
    Label:
        id: lbl_telefone
        size_hint: .08, .03
        # para o texto não extrapolar o tamanho do widget
        text_size: self.size
        halign: "left"
        valign: "center"
        color: rgba('#3e2f3d')
        text: 'Telefone'
        pos_hint: { 'x':.02 , 'center_y':.60 }
    TelefoneInput:
        id: txt_telefone
        multiline: False
        size_hint_x: .16
        pos_hint: { 'x':.02 , 'center_y':.56 }
    BoxLayout:
        id: box_botoes
        # força a utilizar a altura informada
        size_hint_y: None
        height: dp(50)
        Button:
            id: voltar
            text: 'Voltar'
            on_release: 
                root.manager.transition.direction = 'right'
                root.manager.current = 'tela_inicial'
        Button:
            id: gravar
            width: root.width - voltar.width
            text: 'Gravar'  
            on_release: if root.validar_campos() == True: root.cadastrar_pagador()  