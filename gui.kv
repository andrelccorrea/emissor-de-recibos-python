#:import rgba kivy.utils.rgba

# regras comuns a todas as telas
<TelaInicial, TelaCadastrarRecebedor, TelaCadastrarPagador, TelaConsultarPagadores, TelaCadastrarItens, TelaConsultarItens, TelaEmitirRecibo>:
    # cor de fundo
    canvas.before:
        Color: 
            rgba: rgba('#aa80ff')
        Rectangle:
            pos: self.pos
            size: self.size

# regras comuns aos bot√µes
<Button>:
    size_hint_y: None
    height: '100dp'
    text_size: self.size
    halign: "center"
    valign: "center"

# telas
<TelaInicial>:
    BoxLayout:
        Button:
            text: 'Cadastrar Recebedor'
            on_press: root.manager.current = 'tela_cadastrar_recebedor'
        Button:
            text: 'Cadastrar Pagador'
            on_press: root.manager.current = 'tela_cadastrar_pagador'
        Button:
            text: 'Consultar Pagadores'
            on_press: root.manager.current = 'tela_consultar_pagadores'
        Button:
            text: 'Cadastrar Itens'
            on_press: root.manager.current = 'tela_cadastrar_itens'
        Button:
            text: 'Consultar Itens'
            on_press: root.manager.current = 'tela_consultar_itens'
        Button:
            text: 'Emitir Recibo'
            on_press: root.manager.current = 'tela_emitir_recibo'


<TelaCadastrarRecebedor>:
    BoxLayout:
        Button:
            text: 'Voltar'
